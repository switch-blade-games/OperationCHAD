                    rebind = false;
                    
                    // unbind from other existing keys
                    if (global.pad_left[0] == newpad)
                        global.pad_left[0] = -2;
                    if (global.pad_right[0] == newpad)
                        global.pad_right[0] = -2;
                    if (global.pad_up[0] == newpad)
