                    else if (selecty == 5)
                        global.pad_fire[0] = newpad;
                    else if (selecty == 6)
                        global.pad_lock[0] = newpad;
                    }
                }
            }
        else
            {
            if (keyboard_check_pressed(ord("Z")))
            or (keyboard_check_pressed(ord("X")))
            or (gamepad_checkall_pressed(gp_face1,false))
            or (gamepad_checkall_pressed(gp_face3,false))
                {
                if (selecty &lt;= 6)
                    {
                    rebind = true;
                    if (selectx == 0)
                        {
                        if (selecty == 0)
                            global.key_left[0] = -1;
                        else if (selecty == 1)
                            global.key_right[0] = -1;
                        else if (selecty == 2)
