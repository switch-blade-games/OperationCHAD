switch(menu)
    {
    case 0: // title screen
        draw_set_halign(1);
        draw_set_valign(1);
        
        draw_text_outline(view_wview[0]/2,60,"Operation C.H.A.D.");
        if (sin(current_time/200) &gt; 0)
            {
            if (sin(current_time/400) &gt; 0)
                draw_text_outline(view_wview[0]/2,180,"Z or X to Start!");
            else
                {
                draw_text_outline(view_wview[0]/2,180,"-  or  -  to Start!");
