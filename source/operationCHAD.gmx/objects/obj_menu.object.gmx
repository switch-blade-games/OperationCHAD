                    if (global.pad_fire[0] == newpad)
                        global.pad_fire[0] = -2;
                    if (global.pad_lock[0] == newpad)
                        global.pad_lock[0] = -2;
                    
                    // bind to new key
                    if (selecty == 0)
                        global.pad_left[0] = newpad;
