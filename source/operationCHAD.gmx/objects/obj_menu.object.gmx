            if (select == 0)
                room_goto_next();
            else if (select == 2)
                {
                menu = 2;
                select = 0;
                }
            }
        
        if (keyboard_check_pressed(vk_up))
        or (gamepad_checkall_pressed(gp_padu,false))
            select = max(0,select-1);
        if (keyboard_check_pressed(vk_down))
        or (gamepad_checkall_pressed(gp_padd,false))
            select = min(2,select+1);
        break;
    
    case 2: // settings
        if (keyboard_check_pressed(ord("Z")))
        or (keyboard_check_pressed(ord("X")))
        or (gamepad_checkall_pressed(gp_face1,false))
        or (gamepad_checkall_pressed(gp_face3,false))
            {
            if (select == 0)
                {
                global.fullscreen = !global.fullscreen;
                window_set_fullscreen(global.fullscreen);
                if (!global.fullscreen)
                    {
                    window_set_size(view_wview[0]*2,view_hview[0]*2);
                    window_set_position(display_get_width()/2-view_wview[0],display_get_height()/2-view_hview[0]);
                    }
                }
            else if (select == 1)
                global.crt = !global.crt;
            else if (select == 2)
                global.particles = !global.particles;
            else if (select == 3)
                {
                menu = 3;
                selectx = 0;
                selecty = 0;
                }
            else if (select == 4)
                {
                menu = 1;
                select = 0;
                
                settings_save(settings_path);
                }
            }
        
        if (keyboard_check_pressed(vk_up))
        or (gamepad_checkall_pressed(gp_padu,false))
            select = max(0,select-1);
        if (keyboard_check_pressed(vk_down))
        or (gamepad_checkall_pressed(gp_padd,false))
            select = min(4,select+1);
        break;
    
