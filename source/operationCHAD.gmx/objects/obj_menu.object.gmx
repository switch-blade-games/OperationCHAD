                var newkey = key_last();
                if (newkey &gt; -1)
                    {
                    rebind = false;
                    
                    // unbind from other existing keys
                    if (global.key_left[0] == newkey)
                        global.key_left[0] = -2;
                    if (global.key_right[0] == newkey)
                        global.key_right[0] = -2;
