    autosprite_timer--;
else
    {
    autosprite_timer = 60;
    if (file_exists(tex_path)) and (file_exists(json_path))
        {
        var tex_sha1_new = sha1_file(tex_path);
        var json_sha1_new = sha1_file(json_path);
        
        if (tex_sha1_new != tex_sha1)
        or (json_sha1_new != json_sha1)
            {
            tex_sha1 = tex_sha1_new;
            json_sha1 = json_sha1_new;
            
            if (sprite_exists(spr_index))
                sprite_delete(spr_index);
            spr_index = -1;
            
            anim_load_skin(tex_path,json_path);
            }
        }
    }

//if (debug_freeze)
//    exit;

input();
detect();
apply_gravity();
apply_input();
apply_force();
collide();
animate();

// hang time
if (no_mb_time &gt; 0)
    no_mb_time--;
// weapon
if (shoot_timer &gt; 0)
    shoot_timer--;
if (cur_weapon == weapon.flame) and (flame_ang != aim)
    flame_ang -= clamp(angle_difference(flame_ang,aim),-10,10);

// dead
